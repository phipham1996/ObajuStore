@model ObajuStore.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Tài khoản của tôi";
    var user = (ObajuStore.Web.Models.ApplicationUserViewModel)ViewBag.User;
}

<div class="col-md-12 form-login">
    <div class="table-responsive">
        <h4>Thông tin tài khoản - @user.FullName</h4>
        <hr />
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>Họ tên</td>
                    <td>@user.FullName</td>
                </tr>
                <tr>
                    <td>Tên đăng nhập</td>
                    <td>@user.UserName</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@user.BirthDay.ToShortDateString()</td>
                </tr>
                <tr>
                    <td>Giới tính</td>
                    <td>@user.Gender</td>
                </tr>
                <tr>
                    <td>Ngày tham gia</td>
                    <td>
                        @if (user.CreatedDate.HasValue)
                        { user.CreatedDate.Value.ToShortDateString(); }
                    </td>
                </tr>
                <tr>
                    <td>Mật khẩu</td>
                    <td>
                        [
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Đổi mật khẩu", "ChangePassword")
                        }
                        else
                        {
                            @Html.ActionLink("Thêm", "SetPassword")
                        }
                        ]
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
